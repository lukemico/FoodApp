<h2>Add a comment</h2>

<%= form_for (@comment) do |f| %>

  <p>
    <%= f.label :input %>
    <%= f.text_area :input, required: true %>
  </p>

  <%= f.submit %>
<% end %>

<%= form_for(@comment) do |f| %>

  <div class="field">
    <%= f.text_area :input, placeholder: "Post feedback or contribute content
    to this work!" %>
  </div>
  <%= f.submit "Post", class: "btn btn-small btn-primary" %>
<% end %>
